<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-xs-6">
       <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Paper</h3>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="assets/images/paper.png">
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><%=@opp_throw.capitalize%></h3>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="assets/images/<%=@opp_throw%>.png">
        </div>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well">
      <%if @result == "win"%>
        <%@color="success"%>
      <%elsif @result == "lose"%>
        <%@color="danger"%>
      <% else @color="warning"%>
      <%end%>
        <h1 class="text-center"><span class="label label-<%=@color%>">You <%=@result%>!</span></h1>
      </div>
    </div>
  </div>
</div>
